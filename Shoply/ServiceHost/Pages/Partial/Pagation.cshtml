<div style="direction:rtl;" class="pagination-area">
    @if (Model.CurrentPage != 1)
    {
        <a asp-page="/@Model.Page" asp-route-p="@Model.Back" asp-route-number="@Model.number" class="fa fa-arrow-right"></a>
    }
    @for (int i = 1; i <= count; i++)
    {
        <a asp-page="/@Model.Page" asp-route-p="@i" asp-route-number="@Model.number" class="page-numbers @(Model.CurrentPage==i?"bg-danger":"")">@i</a>
    }
    @if (Model.CurrentPage < count)
    {
        <a asp-page="/@Model.Page" asp-route-p="@Model.Next"  asp-route-number="@Model.number" class="fa fa-arrow-left"></a>
    }
</div>