<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (ViewData["Title"] != null)
    {
        <title>@ViewData["Title"]_فروشکاه شاپلی</title>
    }
    else
    {
        <title>فروشکاه شاپلی</title>
    }
    <meta name="keywords" content="@ViewData["Keywords"]" />
    <meta name="keywords" content="@ViewData["MetaDescription"]" />

    <link href="~/theme/assets/css/vendors.css" rel="stylesheet">
    <link href="~/theme/assets/css/style.css" rel="stylesheet">
    <link href="~/theme/assets/css/Custom.css" rel="stylesheet">


</head>

<body>
    <!--====================  header area ====================-->
    @await Component.InvokeAsync("Menu")
    <!--====================  End of header area  ====================-->
    @RenderBody()
    <!--====================  footer area ====================-->
    @await Component.InvokeAsync("Footer")

    <!--====================  End of footer area  ====================-->


    <div class="search-overlay" id="search-overlay">
        <a href="javascript:void(0)" class="close-search-overlay" id="close-search-overlay">
            <i class="ion-ios-close-empty"></i>
        </a>

        <!--=======  search form  =======-->

        <div class="search-form">
            <form method="get" asp-page="/Search">
                <input type="search" name="value" id="value" placeholder="جستوجو در سایت ...">
                <button type="submit">
                    <i class="ion-android-search"></i>
                </button>
            </form>
        </div>

        <!--=======  End of search form  =======-->
    </div>
    <!-- scroll to top  -->
    <div id="scroll-top">
        <span>برو به بالا</span><i class="ion-chevron-right"></i><i class="ion-chevron-right"></i>
    </div>
    <!-- end of scroll to top -->
    <!-- Vendor JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/theme/assets/js/vendors.js"></script>
    <script src="~/theme/assets/js/JavaScript.js"></script>
    <script src="~/theme/assets/js/active.js"></script>
    <script src="~/theme/assets/js/plugins.js"></script>
    <script src="~/theme/assets/js/Custom.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
          UpdateCart();
      })
    </script>
</body>

</html>