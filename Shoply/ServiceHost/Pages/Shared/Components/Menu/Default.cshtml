                                    @{
                                        Func<dynamic, IHtmlContent> ShowMenu(List<ProductCategoryQueryModel> Categories, ProductCategoryQueryModel parent) =>       
                                        @<ul class="sub-menu">
                                            @foreach (var category in Categories.Where(x=>!x.IsRemoved)){
                                                //menu-item-has-children
                                                    @if (((parent == null) && (category.ParentId == null)) || (parent?.Id == category.ParentId))
                                                    {
                                                        <li class="@(category.Children.Any()?"menu-item-has-children":"")">
                                                <a asp-page="./ProductCategory" asp-route-id="@category.Slug">@category.Name</a>

                                                            @if (category.Children != null && category.Children.Any())
                                                            {
                                                                @ShowMenu(category.Children, category)(null)
                                                            }
                                                        </li>
                                                    }
                                            }
                                        </ul>;
                                    }
                                    @ShowMenu(Model.ProductCategories,null)(null)
                                </li>
                                <li class="menu-item-has-children">
                                    <a class="fa fa-arrow-down">مقالات</a>
                                    <ul class="sub-menu">
                                        @foreach (var category in Model.ArticleCategories)
