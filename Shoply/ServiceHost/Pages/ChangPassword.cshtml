@page "{id}"
@model ServiceHost.Pages.ChangPasswordModel
@{
    ViewData["Title"] = "ورود _ ثبت نام";

}
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود_ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a href="index.html">صفحه اصلی</a></li>
                            <li class="active">رمز جدید</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (!string.IsNullOrWhiteSpace(Model.Message))
                                {
                                    <p class="alert alert-danger">@Model.Message</p>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>رمز جدید</label>
                                                <input name="Password" id="Password" autofocus />
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <label>تکرار رمز</label>
                                                <input name="RePassword" id="RePassword">
                                            </div>
                                            <input type="hidden" asp-for="@Model.Id">
                                            <div class="col-md-12">
                                                <button type="submit" class="register-button">تغیر رمز</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>