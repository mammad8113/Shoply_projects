@using InventoryManagement.Application.Contracts.Inventory

@model List<InventoryOperationViewModel>
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"> مشاهده گردش انبار  </h4>

</div>
<p id="Alert" class="alert-danger"></p>

<div class="modal-body" style="overflow-y:auto">
    <table class="table table-bordered ">
        <thead>
            <tr>
                <th>#</th>
                <th>تعداد</th>
                <th>تاریخ</th>
                <th>عملیات</th>
                <th>موجودی فعلی</th>
                <th> شماره فاکتور</th>
                <th>عملگر</th>
                <th>توضیحات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in Model)
            {
                <tr class="text-white @(operation.Operation?"bg-success":"bg-danger")">
                    <td>@operation.Id</td>
                    <td>@operation.Count</td>
                    <td>@operation.OperatorDate</td>
                    <td>
                        @if (operation.Operation)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                            <span>کاهش</span>
                        }
                    </td>
                    <td>@operation.CurrentCount</td>
                    <td>
                        @if (operation.Operation)
                        {
                            <span>_</span>
                        }else{
                            <span>@operation.OrderId</span>
                        }
                            </td>
                    <td>@operation.Operator</td>
                    <td>@operation.Description</td>


                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>

