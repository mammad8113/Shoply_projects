@page
@model ServiceHost.Areas.administration.Pages.Acounts.Rol.IndexModel

@{

    ViewData["title"] = "مدیریت مقام ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./Create">ایجاد مقام جدید</a>
        </p>
    </div>
</div>


<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گروه مقام ها</h3>
            </div>
            <div class="panel-body" style="overflow-y:auto">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var acount in Model.Rols)
                                {
                                    <tr>
                                        <td>@acount.Id</td>
                                        <td>@acount.Name</td>
                                        <td>@acount.CreationDate</td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@acount.Id" class="btn btn-warning pull-right m-rl-5">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
<script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
<script src="~/js/Stock.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').dataTable();
    });
</script>
}