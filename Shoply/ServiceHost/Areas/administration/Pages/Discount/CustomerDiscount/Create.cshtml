@using DiscountManagement.Application.Contracts.CustomerDiscount
@model CreateCustomerDiscount
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد تخفیف مشتریان جدید</h4>

</div>
<p id="Alert" class="alert-danger"></p>
<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">دسته بندی</label>
                    <select class="form-control" asp-for="ProductId" asp-items='new SelectList(Model.Products,"Id","Name")'>
                        <option value="0">محصولات</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Discount" class="control-label">مقدار تخفیف</label>
                    <input class="form-control" asp-for="Discount">
                    <span asp-validation-for="Discount" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDiscount" class="control-label">تاریخ شروع</label>
                    <input class=" form-control persianDate" asp-for="StartDiscount">
                    <span asp-validation-for="StartDiscount" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EndDiscount" class="control-label ">تاریخ پایان</label>
                    <input type="text" class="form-control persianDate" asp-for="EndDiscount">
                    <span asp-validation-for="EndDiscount" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">توضیحات</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>
